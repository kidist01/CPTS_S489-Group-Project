<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles/style.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/5a5b4e639f.js" crossorigin="anonymous"></script>
    <style>
      html, body {
        height: 100%;
        margin: 0;
        
        font-family: "Poppins", sans-serif;
      }
  
      .img-fluid
      {
        width:550px;
        height:400px;
      }
  
      .wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        padding: 20px;
      }
  
      .fadeInDown {
        animation: fadeInDown 1s both;
      }
  
      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
  
  
      .form-control {
      min-width: 100%;
    }
  
    @media (min-width: 992px) {
      .form-section {
        flex: 0 0 65%;
        max-width: 65%;
      }
  
      .image-section {
        flex: 0 0 35%;
        max-width: 35%;
      }
    }
    </style>
<!------ Include the above in your HEAD tag ---------->
    <title>Signup</title>
</head>
<body>
<header>
  <%- include('./header.ejs') %>.
</header>

<main>
  <form method="POST" action="/signup" class="mx-1 mx-md-4" id="signupForm">
      <div class="wrapper fadeInDown">
        <section class="w-100" style="max-width: 1100px;">
          <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                  <div class="card-body p-md-5">
                    <div class="row justify-content-center">
  
                      <!-- FORM SECTION - WIDER -->
                      <div class="col-md-10 col-lg-7 col-xl-7 form-section order-2 order-lg-1">
                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
  
                        <div class="mb-4">
                          <label class="form-label" for="username">Username</label>
                          <input type="text" id="username" name="username" class="form-control" required />
                        </div>
  
                        <div class="mb-4">
                          <label class="form-label" for="email">Email</label>
                          <input type="email" id="email" name="email" class="form-control" required />
                        </div>
  
                        <div class="mb-4">
                          <label class="form-label" for="street">Street</label>
                          <input type="text" id="street" name="street" class="form-control" required />
                        </div>
  
                        <div class="mb-4">
                          <label class="form-label" for="city">City</label>
                          <input type="text" id="city" name="city" class="form-control" required />
                        </div>
  
                        <div class="mb-4">
                          <label class="form-label" for="state">State</label>
                          <input type="text" id="state" name="state" class="form-control" required />
                        </div>
  
                        <div class="mb-4">
                          <label class="form-label" for="zip">Zip</label>
                          <input type="text" id="zip" name="zip" class="form-control" required />
                        </div>
  
                        <div class="mb-4">
                          <label class="form-label" for="password">Password</label>
                          <input type="password" id="password" name="password" class="form-control" required />
                        </div>
  
                        <div class="mb-4">
                          <label class="form-label" for="repeat-password">Repeat your password</label>
                          <input type="password" id="repeat-password" name="repeatPassword" class="form-control" required />
                        </div>  
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                      </div>  
                      <!-- IMAGE SECTION - NARROWER -->
                      <div class="col-md-10 col-lg-5 col-xl-5 image-section d-flex align-items-center order-1 order-lg-2">
                        <img src="images/logo.png" class="img-fluid" alt="Logo image">
                      </div>
  
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </form>
  </main>

<footer>
  <%- include('./footer.ejs') %>.
</footer>
<script>
  //to make sure that the passwords match since they type it twice 
  document.addEventListener("DOMContentLoaded", function () {
    const signupForm = document.getElementById("signupForm");
    if (signupForm) {
      signupForm.addEventListener("submit", function (event) {
        const password = document.getElementById("password").value;
        const repeatPassword = document.getElementById("repeat-password").value;

        if (password !== repeatPassword) {
          event.preventDefault(); // stop form submission
          alert("Password must match, please fix it and register.");
        }
      });
    }
  });
</script>

</body>
</html>